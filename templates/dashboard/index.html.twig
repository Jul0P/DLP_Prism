{% extends 'layouts/dashboard.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .info-card {
            display: flex;
            align-items: center;
            background-color: var(--card);
            border-radius: var(--radius);
            padding: 1.5rem;
            box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
            transition: box-shadow 0.5s ease, transform 0.5s ease, background-color 0.5s ease, color 0.5s ease;
        }

        .info-card:hover {
            box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
            transform: translateY(-2px);
        }

        .info-card-icon {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 48px;
            height: 48px;
            border-radius: 50%;
            margin-right: 1rem;
            background-color: var(--muted);
            transition: background-color 0.5s ease;
        }

        .info-card-icon img {
            stroke: var(--muted-foreground);
            transition: filter 0.5s ease;
        }

        .info-card-content h3 {
            font-size: 0.875rem;
            line-height: 1.25rem;
            font-weight: 500;
        }

        .info-card-content p {
            font-size: 1.5rem;
            line-height: 2rem;
            font-weight: 600;
        }

        .welcome-section {
            background-color: var(--card);
            border-radius: var(--radius);
            padding: 1.5rem;
            box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
            transition: box-shadow 0.5s ease, transform 0.5s ease, background-color 0.5s ease, color 0.5s ease;
        }

        .welcome-section h2 {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 1rem;
        }

        .welcome-section p {
            color: var(--muted-foreground);
            margin-bottom: 1rem;
        }

        .info-boxes {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            width: 100%;
        }

        .info-box {
            padding: 1rem;
            border-radius: var(--radius);
            background-color: var(--accent);
            transition: background-color 0.5s ease, color 0.5s ease;
        }

        .info-box h3 {
            font-size: 1.1rem;
            font-weight: 500;
        }

        .info-box p {
            font-size: 0.875rem;
            color: var(--muted-foreground);
            margin-top: 0.5rem;
        }

        [data-theme="dark"] .info-card {
            box-shadow: 0 1px 3px 0 rgb(255 255 255 / 0.1), 0 1px 2px -1px rgb(255 255 255 / 0.1);
        }

        [data-theme="dark"] .welcome-section {
            box-shadow: 0 1px 3px 0 rgb(255 255 255 / 0.1), 0 1px 2px -1px rgb(255 255 255 / 0.1);
        }

        [data-theme="dark"] .info-card:hover {
            box-shadow: 0 10px 15px -3px rgb(255 255 255 / 0.1), 0 4px 6px -4px rgb(255 255 255 / 0.1);
        }

        [data-theme="dark"] .info-card-icon img {
            filter: brightness(0) invert(1);
        }

        .dashboard-content {
            display: flex;
            flex-direction: column;
            gap: 30px;
        }
    </style>
{% endblock %}

{% block title %}Prism - Tableau de bord{% endblock %}

{% block main %}
    <div class="welcome-section">
        <h2>Bienvenue dans PRISM, le système de gestion des entreprises de stages</h2>
        <p>
            Ce tableau de bord offre un aperçu de votre système de gestion. Utilisez la navigation pour gérer les entreprises, leurs employés, les étudiants et leurs stages
        </p>
        <div class="info-boxes">
            <div class="info-box">
                <h3>Entreprises</h3>
                <p>Gérer les entreprises offrant des stages</p>
            </div>
            <div class="info-box">
                <h3>Employés</h3>
                <p>Gérer les employés et tuteurs de stage</p>
            </div>
            <div class="info-box">
                <h3>Étudiants</h3>
                <p>Gérer les profils des étudiants et leur historique de stages</p>
            </div>
            <div class="info-box">
                <h3>Stages</h3>
                <p>Suivre et gérer les stages actuels et passés</p>
            </div>
        </div>
    </div>
    <div class="dashboard-content">
        <div class="dashboard-header">
            <h2 class="title">Tableau de bord</h2>
            <p class="subtitle">
                Voici un aperçu des statistiques de votre système de gestion
            </p>
        </div>
        <div class="stats-grid">
            <div class="info-card">
                <div class="info-card-icon">
                    <img src="{{ asset('assets/icons/building-2.svg') }}" alt="Building Icon" class="w-6 h-6">
                </div>
                <div class="info-card-content">
                    <h3>Entreprises</h3>
                    <p>{{ stats.totalEntreprises|default(0) }}</p>
                </div>
            </div>
            <div class="info-card">
                <div class="info-card-icon">
                    <img src="{{ asset('assets/icons/graduation-cap.svg') }}" alt="Graduation Cap Icon" class="w-6 h-6">
                </div>
                <div class="info-card-content">
                    <h3>Étudiants</h3>
                    <p>{{ stats.totalEtudiants|default(0) }}</p>
                </div>
            </div>
            <div class="info-card">
                <div class="info-card-icon">
                    <img src="{{ asset('assets/icons/calendar-range.svg') }}" alt="Calendar Icon" class="w-6 h-6">
                </div>
                <div class="info-card-content">
                    <h3>Stages</h3>
                    <p>{{ stats.totalStages|default(0) }}</p>
                </div>
            </div>
            <div class="info-card">
                <div class="info-card-icon">
                    <img src="{{ asset('assets/icons/users.svg') }}" alt="Users Icon" class="w-6 h-6">
                </div>
                <div class="info-card-content">
                    <h3>Tuteurs</h3>
                    <p>{{ stats.totalTuteurs|default(0) }}</p>
                </div>
            </div>
            <div class="info-card">
                <div class="info-card-icon">
                    <img src="{{ asset('assets/icons/clock-3.svg') }}" alt="Clock Icon" class="w-6 h-6">
                </div>
                <div class="info-card-content">
                    <h3>Stages actifs</h3>
                    <p>{{ stats.activeStages|default(0) }}</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}